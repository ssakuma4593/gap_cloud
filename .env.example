# AWS Credentials for S3 Access
# You can obtain these from your AWS Console -> IAM -> Users -> Security Credentials
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here

# Optional: AWS Region (defaults to us-east-1 if not specified)
AWS_DEFAULT_REGION=us-east-1

# PostgreSQL Database Configuration
# Option 1: Full database URL (recommended)
DATABASE_URL=postgresql://username:password@localhost:5432/research_gaps

# Option 2: Individual database components (alternative to DATABASE_URL)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=research_gaps
# DB_USER=postgres
# DB_PASSWORD=your_password_here
